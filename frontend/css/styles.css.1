/* ===== MODERN CSS FOR PHOENIX COUNCIL ELECTIONS ===== */
:root {
  /* Enhanced Color System */
  --primary-50: #e8f5f0;
  --primary-100: #c6e6d7;
  --primary-200: #a1d5bc;
  --primary-300: #7bc4a1;
  --primary-400: #5eb78c;
  --primary-500: #42aa78;
  --primary-600: #3ca270;
  --primary-700: #339865;
  --primary-800: #2b8f5b;
  --primary-900: #1d7e48;
  --primary: var(--primary-600);
  
  --secondary-50: #fff8e1;
  --secondary-100: #ffecb3;
  --secondary-200: #ffe082;
  --secondary-300: #ffd54f;
  --secondary-400: #ffca28;
  --secondary-500: #ffc107;
  --secondary-600: #ffb300;
  --secondary-700: #ffa000;
  --secondary-800: #ff8f00;
  --secondary-900: #ff6f00;
  --secondary: var(--secondary-500);
  
  --success: #28a745;
  --danger: #dc3545;
  --warning: #ffc107;
  --info: #17a2b8;
  --light: #f8f9fa;
  --dark: #212529;
  --gray-100: #f8f9fa;
  --gray-200: #e9ecef;
  --gray-300: #dee2e6;
  --gray-400: #ced4da;
  --gray-500: #adb5bd;
  --gray-600: #6c757d;
  --gray-700: #495057;
  --gray-800: #343a40;
  --gray-900: #212529;
  
  /* Semantic colors */
  --text-primary: var(--gray-900);
  --text-secondary: var(--gray-700);
  --text-muted: var(--gray-600);
  --bg-primary: #ffffff;
  --bg-secondary: var(--gray-100);
  --border-color: var(--gray-300);
  --shadow-color: rgba(0, 0, 0, 0.08);
  
  /* Enhanced spacing system */
  --spacing-xxs: 0.25rem;
  --spacing-xs: 0.5rem;
  --spacing-sm: 0.75rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  --spacing-xxl: 3rem;
  
  /* Border radius */
  --border-radius-sm: 0.375rem;
  --border-radius: 0.5rem;
  --border-radius-lg: 0.75rem;
  --border-radius-xl: 1rem;
  --border-radius-xxl: 1.5rem;
  --pill-radius: 9999px;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-md: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  --shadow-xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  
  /* Transitions */
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition: 250ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 350ms cubic-bezier(0.4, 0, 0.2, 1);
  
  /* Typography */
  --font-size-xs: 0.75rem;
  --font-size-sm: 0.875rem;
  --font-size: 1rem;
  --font-size-lg: 1.125rem;
  --font-size-xl: 1.25rem;
  --font-size-xxl: 1.5rem;
  --font-size-xxxl: 2rem;
  
  /* Z-index layers */
  --z-dropdown: 1000;
  --z-sticky: 1020;
  --z-fixed: 1030;
  --z-modal-backdrop: 1040;
  --z-modal: 1050;
  --z-popover: 1060;
  --z-tooltip: 1070;
  --z-toast: 1080;
}

/* ===== BASE STYLES ===== */
*,
*::before,
*::after {
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: 'Roboto', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  line-height: 1.6;
  color: var(--text-primary);
  background: linear-gradient(135deg, var(--primary-500) 0%, var(--primary-700) 100%);
  min-height: 100vh;
  margin: 0;
  padding: var(--spacing-md);
}

/* Improved focus styles for accessibility */
button:focus,
input:focus,
select:focus,
textarea:focus,
a:focus {
  outline: 2px solid var(--primary-300);
  outline-offset: 2px;
}

/* ===== TYPOGRAPHY ===== */
h1, h2, h3, h4, h5, h6 {
  font-family: 'Poppins', sans-serif;
  font-weight: 700;
  line-height: 1.2;
  margin-top: 0;
  margin-bottom: var(--spacing-md);
}

h1 { font-size: var(--font-size-xxxl); }
h2 { font-size: var(--font-size-xxl); }
h3 { font-size: var(--font-size-xl); }
h4 { font-size: var(--font-size-lg); }
h5 { font-size: var(--font-size); }
h6 { font-size: var(--font-size-sm); }

p {
  margin-top: 0;
  margin-bottom: var(--spacing-md);
}

/* ===== LAYOUT COMPONENTS ===== */
.main-app {
  max-width: 1200px;
  margin: var(--spacing-xl) auto;
  background: var(--bg-primary);
  border-radius: var(--border-radius-xl);
  box-shadow: var(--shadow-xl);
  overflow: hidden;
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.header {
  position: relative;
  background: linear-gradient(120deg, var(--primary-600), var(--primary-800));
  color: white;
  text-align: center;
  border-radius: var(--border-radius-xl) var(--border-radius-xl) 0 0;
  padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
}

.header-controls {
  position: absolute;
  top: var(--spacing-md);
  left: var(--spacing-lg);
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  z-index: var(--z-sticky);
}

/* ===== AUTH SCREEN ===== */
.auth-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(135deg, var(--primary-500) 0%, var(--primary-700) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: var(--z-modal-backdrop);
  padding: var(--spacing-md);
}

.auth-container {
  text-align: center;
  max-width: 100%;
  width: 100%;
}

.auth-logo {
  margin-bottom: var(--spacing-xxl);
  text-align: center;
}

.logo-icon {
  width: 100px;
  height: 100px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto var(--spacing-lg);
  color: white;
  font-size: 2.5rem;
  box-shadow: var(--shadow-lg);
  backdrop-filter: blur(10px);
}

.auth-logo h1 {
  color: white;
  font-size: 2.2rem;
  font-weight: 700;
  margin: 0;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.auth-subtitle {
  color: rgba(255, 255, 255, 0.9);
  font-size: 1.1rem;
  margin-top: var(--spacing-sm);
}

.auth-card {
  background: var(--bg-primary);
  border-radius: var(--border-radius-xl);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-xl);
  max-width: 520px;
  width: 100%;
  display: inline-block;
  animation: slideUp 0.5s cubic-bezier(0.18, 1.25, 0.4, 1);
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(30px) scale(0.95); }
  to { opacity: 1; transform: translateY(0) scale(1); }
}

.auth-card h2 {
  font-size: 1.8rem;
  color: var(--primary);
  margin-bottom: var(--spacing-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
}

.auth-card p {
  font-size: 1.1rem;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xl);
  line-height: 1.6;
}

.auth-section {
  margin-bottom: var(--spacing-lg);
}

/* ===== BUTTONS ===== */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
  font-weight: 600;
  font-family: inherit;
  text-align: center;
  text-decoration: none;
  white-space: nowrap;
  vertical-align: middle;
  cursor: pointer;
  user-select: none;
  border: 2px solid transparent;
  border-radius: var(--pill-radius);
  transition: all var(--transition-fast);
  box-shadow: var(--shadow-sm);
  min-height: 46px;
  margin: var(--spacing-xs);
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow);
}

.btn:active {
  transform: translateY(0);
}

.btn:disabled {
  opacity: 0.65;
  cursor: not-allowed;
  transform: none !important;
}

/* Button variants */
.google-signin-btn {
  background: #4285F4;
  border-color: #4285F4;
  color: white;
  box-shadow: 0 4px 12px rgba(66, 133, 244, 0.25);
  width: 100%;
  max-width: 320px;
}

.google-signin-btn:hover {
  background: #3367d6;
  border-color: #3367d6;
  box-shadow: 0 6px 16px rgba(66, 133, 244, 0.35);
}

.demo-btn-primary {
  background: var(--secondary);
  border-color: var(--secondary);
  color: var(--dark);
  box-shadow: 0 4px 12px rgba(255, 193, 7, 0.25);
  width: 100%;
  max-width: 320px;
}

.demo-btn-primary:hover {
  background: #e6ac00;
  border-color: #e6ac00;
  box-shadow: 0 6px 16px rgba(255, 193, 7, 0.35);
}

.btn-success {
  background: var(--success);
  border-color: var(--success);
  color: white;
}

.btn-success:hover {
  background: #218838;
  border-color: #1e7e34;
}

.btn-outline {
  background: transparent;
  border: 2px solid var(--primary);
  color: var(--primary);
}

.btn-outline:hover {
  background: var(--primary);
  color: white;
}

.btn-warning {
  background: var(--warning);
  border-color: var(--warning);
  color: var(--dark);
}

.btn-warning:hover {
  background: #e0a800;
  border-color: #d39e00;
}

.btn-secondary {
  background: var(--gray-600);
  border-color: var(--gray-600);
  color: white;
}

.btn-secondary:hover {
  background: var(--gray-700);
  border-color: var(--gray-700);
}

.logout-btn {
  background: var(--gray-200);
  border-color: var(--gray-200);
  color: var(--gray-700);
}

.logout-btn:hover {
  background: var(--gray-300);
  border-color: var(--gray-300);
  color: var(--gray-800);
}

/* ===== TABS ===== */
.tabs {
  display: flex;
  gap: var(--spacing-xs);
  background: var(--gray-100);
  border-radius: var(--pill-radius);
  margin: var(--spacing-lg) auto;
  padding: var(--spacing-xs);
  position: sticky;
  top: 0;
  z-index: var(--z-sticky);
  overflow-x: auto;
  width: fit-content;
  max-width: 100%;
  box-shadow: var(--shadow-sm);
}

.tab {
  flex: 1;
  min-width: 100px;
  padding: var(--spacing-sm) var(--spacing-md);
  font-size: 0.95rem;
  text-align: center;
  background: transparent;
  border: none;
  border-radius: var(--pill-radius);
  color: var(--gray-600);
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition);
  position: relative;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
}

.tab.active {
  background: var(--primary);
  color: white;
  box-shadow: var(--shadow-sm);
  font-weight: 700;
}

.tab:not(.active):hover {
  background: var(--gray-200);
  color: var(--gray-800);
}

.tab.disabled {
  opacity: 0.5;
  cursor: not-allowed;
  pointer-events: none;
}

/* ===== TAB CONTENT ===== */
.tab-content {
  display: none;
  padding: var(--spacing-xl) 0;
  animation: fadeIn 0.4s ease-out;
}

.tab-content.active {
  display: block;
}

.content-section {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--spacing-xl);
}

.content-section h2 {
  font-size: 1.8rem;
  color: var(--primary);
  margin-bottom: var(--spacing-lg);
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

/* ===== CANDIDATE CARDS ===== */
.candidate-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: var(--spacing-lg);
  margin: var(--spacing-xl) 0;
}

.candidate-item {
  background: var(--bg-primary);
  border: 2px solid var(--border-color);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  text-align: center;
  cursor: pointer;
  transition: all var(--transition);
  position: relative;
  box-shadow: var(--shadow-sm);
  min-height: 280px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.candidate-item:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow);
  border-color: var(--primary-200);
}

.candidate-item.selected {
  border-color: var(--success);
  box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.25);
  background-color: rgba(40, 167, 69, 0.03);
}

.candidate-item.executive-selected {
  border-color: var(--warning);
  box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.25);
  background-color: rgba(255, 193, 7, 0.03);
}

.candidate-image {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  object-fit: cover;
  margin: 0 auto var(--spacing-md);
  border: 3px solid white;
  box-shadow: var(--shadow);
  transition: var(--transition);
}

.candidate-item:hover .candidate-image {
  transform: scale(1.08);
  border-color: var(--primary);
}

.candidate-name {
  font-weight: 700;
  margin-bottom: var(--spacing-xs);
  font-size: 1.1rem;
  color: var(--text-primary);
  min-height: 2.6em;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-align: center;
}

.candidate-position {
  font-size: 0.95rem;
  color: var(--text-muted);
  margin-bottom: var(--spacing-sm);
  font-weight: 500;
}

.activity-indicator {
  display: inline-block;
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--pill-radius);
  font-size: 0.8rem;
  font-weight: 600;
  margin-top: auto;
  background-color: var(--gray-500);
  color: white;
  transition: var(--transition);
}

.activity-high { background-color: var(--success); }
.activity-medium { background-color: var(--warning); color: var(--dark); }
.activity-low { background-color: var(--danger); }

.priority-badge {
  position: absolute;
  top: -12px;
  right: -12px;
  background: var(--primary);
  color: white;
  border-radius: 50%;
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1rem;
  font-weight: bold;
  z-index: 10;
  border: 3px solid white;
  box-shadow: var(--shadow);
  transition: var(--transition);
}

.priority-badge:hover {
  transform: scale(1.1);
}

.priority-badge.executive-badge {
  background: var(--warning);
  color: var(--dark);
}

/* ===== VOTE CONTROLS ===== */
.vote-controls-container {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-md);
  margin: var(--spacing-lg) 0;
  align-items: center;
  background: var(--gray-100);
  padding: var(--spacing-md);
  border-radius: var(--border-radius);
  width: 100%;
}

.sorting-controls {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  flex: 1;
  min-width: 200px;
}

.sorting-controls label {
  font-weight: 600;
  color: var(--gray-700);
  white-space: nowrap;
  font-size: 0.95rem;
}

.sorting-controls select {
  padding: 0.625rem 0.875rem;
  border-radius: var(--border-radius);
  border: 1px solid var(--border-color);
  background: var(--bg-primary);
  font-size: 0.95rem;
  cursor: pointer;
  box-shadow: var(--shadow-sm);
  transition: var(--transition);
  min-width: 180px;
  flex: 1;
}

.sorting-controls select:hover {
  border-color: var(--primary);
}

.search-container {
  flex: 1;
  min-width: 150px;
}

#candidateSearch {
  width: 100%;
  padding: 0.625rem 0.875rem;
  border-radius: var(--border-radius);
  border: 1px solid var(--border-color);
  background: var(--bg-primary);
  font-size: 0.95rem;
  box-shadow: var(--shadow-sm);
  transition: var(--transition);
}

#candidateSearch:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(0, 150, 87, 0.2);
}

.selection-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin: var(--spacing-xl) 0 var(--spacing-lg);
  flex-wrap: wrap;
  gap: var(--spacing-lg);
}

.counter-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: var(--bg-primary);
  border: 2px solid var(--border-color);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  min-width: 200px;
  box-shadow: var(--shadow-sm);
}

.counter-group h3 {
  font-size: 1.1rem;
  color: var(--primary);
  margin: 0 0 var(--spacing-xs);
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.counter {
  background: var(--primary);
  color: white;
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--pill-radius);
  font-size: 1rem;
  font-weight: 700;
  min-width: 70px;
  text-align: center;
}

/* Executive counter styling */
.counter-group:nth-child(2) .counter {
  background-color: var(--warning);
  color: var(--dark);
}

.counter-group:nth-child(2) h3 {
  color: var(--warning);
}

/* ===== STATUS MESSAGES ===== */
.status-message {
  margin: var(--spacing-xl) 0;
}

.thank-you-card,
.election-closed-card,
.not-registered-card {
  background: linear-gradient(135deg, var(--primary-500) 0%, var(--primary-700) 100%);
  color: white;
  border-radius: var(--border-radius-xl);
  padding: var(--spacing-xl);
  margin: var(--spacing-xl) auto;
  text-align: center;
  box-shadow: var(--shadow-lg);
  max-width: 800px;
  animation: fadeInUp 0.5s ease-out;
}

.election-closed-card {
  background: linear-gradient(135deg, var(--danger) 0%, #c82333 100%);
}

.not-registered-card {
  background: linear-gradient(135deg, var(--gray-600) 0%, var(--gray-800) 100%);
}

.thank-you-content h2,
.closed-content h2,
.not-registered-content h2 {
  font-size: 2rem;
  margin-bottom: var(--spacing-md);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
}

.thank-you-content p,
.closed-content p,
.not-registered-content p {
  font-size: 1.1rem;
  margin: var(--spacing-md) 0;
  line-height: 1.6;
  opacity: 0.9;
}

.thank-you-actions,
.closed-actions,
.not-registered-actions {
  display: flex;
  justify-content: center;
  gap: var(--spacing-md);
  margin-top: var(--spacing-xl);
  flex-wrap: wrap;
}

/* ===== RESULTS TAB ===== */
.stats-card {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-color);
}

.stats-top {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-md);
}

.stat-item {
  background: var(--gray-100);
  padding: var(--spacing-md);
  border-radius: var(--border-radius);
  text-align: center;
}

.stat-item.large {
  padding: var(--spacing-lg);
}

.stat-item label {
  display: block;
  font-size: 0.9rem;
  color: var(--gray-700);
  margin-bottom: var(--spacing-xs);
}

.stat-item span {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--primary);
}

.stat-item.large span {
  font-size: 2rem;
}

.leaderboard {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-md);
  padding: var(--spacing-md) 0;
  width: 100%;
}

.leader-item {
  background: var(--bg-primary);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-sm);
  padding: var(--spacing-md);
  display: flex;
  align-items: flex-start;
  gap: var(--spacing-sm);
  transition: var(--transition);
  cursor: pointer;
  position: relative;
  border: 1px solid var(--border-color);
}

.leader-item:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow);
  border-color: var(--primary-200);
}

.leader-item.executive {
  border: 1px solid var(--warning);
  background-color: rgba(255, 193, 7, 0.05);
  box-shadow: 0 4px 12px rgba(255, 193, 7, 0.15);
}

.leader-rank {
  font-size: 1.5rem;
  font-weight: bold;
  color: var(--gray-600);
  min-width: 50px;
  text-align: center;
  align-self: center;
  padding: var(--spacing-xs) 0;
}

.leader-avatar img,
.avatar-placeholder {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  color: var(--gray-600);
  background-color: var(--gray-100);
}

.leader-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.leader-name {
  font-size: 1.1rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 4px;
  display: flex;
  align-items: center;
  gap: 6px;
}

.leader-position {
  font-size: 0.9rem;
  color: var(--text-muted);
  font-style: italic;
  margin-bottom: var(--spacing-sm);
}

.leader-stats {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.stat-row {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.9rem;
}

.stat-label {
  color: var(--text-primary);
  font-weight: 500;
  min-width: 90px;
  display: flex;
  align-items: center;
  gap: 4px;
}

.stat-bar-container {
  flex: 1;
  min-width: 80px;
}

.stat-bar {
  background: var(--gray-200);
  border-radius: 10px;
  height: 12px;
  position: relative;
  overflow: hidden;
}

.stat-fill {
  height: 100%;
  background: var(--primary);
  border-radius: 10px;
  transition: width 0.8s cubic-bezier(0.22, 0.61, 0.36, 1);
  width: 0;
}

.stat-fill.exec {
  background: var(--warning);
}

.stat-value {
  font-size: 0.95rem;
  font-weight: 600;
  color: var(--text-primary);
  min-width: 45px;
  text-align: right;
}

/* ===== ADMIN TAB ===== */
.admin-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-lg);
}

.admin-card {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-color);
}

.admin-card.wide {
  grid-column: 1 / -1;
}

.admin-card h3 {
  font-size: 1.3rem;
  color: var(--primary);
  margin-bottom: var(--spacing-md);
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.admin-actions {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

/* ===== TOAST NOTIFICATIONS ===== */
.toast-container {
  position: fixed;
  top: var(--spacing-lg);
  right: var(--spacing-lg);
  z-index: var(--z-toast);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  max-width: 400px;
}

.toast {
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--border-radius);
  color: white;
  font-weight: 500;
  box-shadow: var(--shadow-lg);
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  animation: slideInRight 0.3s ease, fadeOut 0.5s ease 4.5s forwards;
  max-width: 100%;
}

.toast.success { background: var(--success); }
.toast.error { background: var(--danger); }
.toast.info { background: var(--info); }
.toast.warning { background: var(--warning); color: var(--dark); }

@keyframes slideInRight {
  from { transform: translateX(100%); opacity: 0; }
  to { transform: translateX(0); opacity: 1; }
}

@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; visibility: hidden; }
}

/* ===== LOADER ===== */
.loader {
  border: 3px solid var(--gray-200);
  border-top: 3px solid var(--primary);
  border-radius: 50%;
  width: 40px;
  height: 40px;
  animation: spin 1s linear infinite;
  margin: var(--spacing-xl) auto;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* ===== FOOTER ===== */
.footer {
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
  margin-top: var(--spacing-xl);
  padding: var(--spacing-lg);
  font-size: 0.95rem;
  font-weight: 500;
  background: none;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

/* ===== RESPONSIVE DESIGN ===== */
@media (max-width: 992px) {
  .candidate-grid {
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  }
  
  .leaderboard {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  :root {
    --font-size-xxxl: 1.75rem;
    --font-size-xxl: 1.5rem;
    --font-size-xl: 1.25rem;
  }
  
  body {
    padding: var(--spacing-sm);
  }
  
  .main-app {
    margin: var(--spacing-md) auto;
    border-radius: var(--border-radius-lg);
  }
  
  .header {
    padding: var(--spacing-lg) var(--spacing-md) var(--spacing-md);
    border-radius: var(--border-radius-lg) var(--border-radius-lg) 0 0;
  }
  
  .header-controls {
    position: static;
    margin-bottom: var(--spacing-md);
    justify-content: center;
  }
  
  .tabs {
    flex-wrap: nowrap;
    overflow-x: auto;
    justify-content: flex-start;
  }
  
  .tab {
    flex: 0 0 auto;
  }
  
  .content-section {
    padding: var(--spacing-lg);
  }
  
  .vote-controls-container {
    flex-direction: column;
    align-items: stretch;
  }
  
  .sorting-controls,
  .search-container {
    min-width: 100%;
  }
  
  .selection-header {
    flex-direction: column;
    align-items: stretch;
  }
  
  .counter-group {
    min-width: 100%;
  }
  
  .stats-top {
    grid-template-columns: 1fr;
  }
  
  .admin-grid {
    grid-template-columns: 1fr;
  }
  
  .thank-you-actions,
  .closed-actions,
  .not-registered-actions {
    flex-direction: column;
    align-items: center;
  }
}

@media (max-width: 576px) {
  .auth-card {
    padding: var(--spacing-lg);
  }
  
  .candidate-grid {
    grid-template-columns: 1fr;
  }
  
  .candidate-item {
    min-height: 250px;
    padding: var(--spacing-md);
  }
  
  .candidate-image {
    width: 80px;
    height: 80px;
  }
  
  .leader-item {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .leader-rank {
    position: absolute;
    top: var(--spacing-sm);
    left: var(--spacing-sm);
    font-size: 1.2rem;
    min-width: auto;
  }
  
  .leader-content {
    width: 100%;
    align-items: center;
  }
  
  .stat-row {
    flex-wrap: wrap;
    justify-content: space-between;
  }
  
  .stat-label {
    min-width: auto;
  }
  
  .toast-container {
    left: var(--spacing-sm);
    right: var(--spacing-sm);
    top: var(--spacing-sm);
  }
  
  .toast {
    max-width: 100%;
  }
}

/* ===== RTL SUPPORT ===== */
body.rtl {
  direction: rtl;
  font-family: 'Poppins', 'Roboto', Arial, sans-serif;
}

body.rtl .header-controls {
  right: var(--spacing-lg);
  left: auto;
  flex-direction: row-reverse;
}

body.rtl .candidate-info {
  right: auto;
  left: 12px;
}

body.rtl .close-details {
  right: auto;
  left: 12px;
}

body.rtl .priority-badge {
  right: auto;
  left: -12px;
}

/* ===== PRINT STYLES ===== */
@media print {
  .auth-screen,
  .header-controls,
  .tabs,
  .btn,
  .candidate-info,
  .action-buttons {
    display: none !important;
  }
  
  body {
    background: white !important;
    color: black !important;
    padding: 0 !important;
  }
  
  .main-app {
    margin: 0 !important;
    box-shadow: none !important;
    border-radius: 0 !important;
  }
  
  .header {
    background: white !important;
    color: black !important;
    border-bottom: 2px solid black;
  }
  
  .content-section {
    break-inside: avoid;
    box-shadow: none !important;
    border: 1px solid #ddd;
  }
  
  .candidate-grid {
    grid-template-columns: repeat(3, 1fr) !important;
  }
}

/* ===== UTILITY CLASSES ===== */
.hidden {
  display: none !important;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.mb-0 {
  margin-bottom: 0;
}

.mt-0 {
  margin-top: 0;
}

/* ===== CUSTOM SCROLLBAR ===== */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--gray-100);
  border-radius: var(--pill-radius);
}

::-webkit-scrollbar-thumb {
  background: var(--gray-400);
  border-radius: var(--pill-radius);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--gray-500);
}